<!-- fragment_food_log.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title Text for Calorie Overview -->
    <TextView
        android:id="@+id/calorieOverviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories Remaining"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Breakfast Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/breakfastCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/calorieOverviewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/breakfastTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/breakfastCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 total calories"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/addFoodButtonBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Food"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Additional cards for Lunch, Dinner, and Snacks can be structured similarly -->

</androidx.constraintlayout.widget.ConstraintLayout>
